<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="5mm"
        android:fontFamily="cursive"
        android:text="Arad Museum Complex"
        android:textSize="45dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="@dimen/cardview_default_elevation"
        android:gravity="center_horizontal" />
    <ImageView
        android:id="@+id/m1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:layout_marginTop="120dp"
        android:src="@drawable/mus1" />
    <TextView
        android:id="@+id/list_e_taskdesc"
        android:layout_width="50mm"
        android:layout_centerInParent="true"
        android:layout_height="70mm"
        android:layout_weight="1"
        android:layout_gravity="fill_vertical"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"
        android:text="The museum was opened in 1893 as an exhibition of relics of the Pasoptist revolution, displayed in the lobby on the second floor of the State Theater. Two decades later, the museum was moved to the newly built Cultural Palace (1913), along with the city's philharmonic and library. Here were arranged, along with the old relic exhibition, exhibition halls for the collection of archeology and medieval history as well as a European art gallery. In the interwar period, an ethnography exhibition and two memorial rooms dedicated to Arad politicians Vasile Goldiș and Ștefan Cicio-Pop (1934) were added."
        tools:ignore="RtlCompat"
        android:textColor="@color/white"
        android:layout_marginTop="700dp"
        android:background="#A000">
    </TextView>
    <ImageView
        android:id="@+id/lo"
        android:layout_width="10mm"
        android:layout_height="7mm"
        android:background="#00000000"
        android:src="@drawable/lll"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-2.5mm"

        />
    <TextView
        android:id="@+id/loc"
        android:layout_width="300mm"
        android:layout_height="7mm"
        android:layout_gravity="fill_vertical"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"
        android:text="Location: Piata George Enescu Nr.1 "
        tools:ignore="RtlCompat"
        android:textColor="@color/white"
        android:background="#000000"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5mm">
    </TextView>
</RelativeLayout>
</ScrollView>
