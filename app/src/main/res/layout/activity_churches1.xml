<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="77dp"
            android:layout_marginBottom="5mm"
            android:fontFamily="cursive"
            android:text="The 'Holy Trinity' Cathedral"
            android:textSize="55dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="@dimen/cardview_default_elevation"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/m1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:layout_marginTop="150dp"
            android:src="@drawable/bis3" />

        <TextView
            android:layout_marginTop="800dp"
            android:id="@+id/list_e_taskdesc"
            android:layout_width="50mm"
            android:layout_centerInParent="true"
            android:layout_height="70mm"
            android:layout_weight="1"
            android:layout_gravity="fill_vertical"
            android:autoSizeTextType="uniform"
            android:textAlignment="center"
            android:text="The 'Holy Trinity' Cathedral in Arad is an Orthodox cathedral, the seat of the archbishopric of the Archdiocese of Arad. The building also houses some of the relics of St. John Chrysostom. The painting of the cathedral was made by the painter Cezar Constantin Cătălin Băluț and was completed in December 2018, when the consecration of the place of worship took place.
The cornerstone of the Arad cathedral was laid in 1991 by Timotei Seviciu, bishop of Arad. [1] The cathedral was built by Patriarch Daniel on December 6, 2008, and on November 28, 2009 it became an archbishop's cathedral."
            tools:ignore="RtlCompat"
            android:textColor="@color/white"
            android:background="#A000">
        </TextView>
        <ImageView
            android:id="@+id/lo"
            android:layout_width="10mm"
            android:layout_height="7mm"
            android:background="#00000000"
            android:src="@drawable/lll"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-2.5mm"

            />
        <TextView
            android:id="@+id/loc"
            android:layout_width="300mm"
            android:layout_height="7mm"
            android:layout_gravity="fill_vertical"
            android:autoSizeTextType="uniform"
            android:textAlignment="center"
            android:text="Location: Bulevardul Revolutiei, Nr. 15 Arad"
            tools:ignore="RtlCompat"
            android:textColor="@color/white"
            android:background="#000000"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5mm">
        </TextView>
    </RelativeLayout>
</ScrollView>
