<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:layout_marginBottom="5mm"
        android:fontFamily="cursive"
        android:text="Ioan Slavici Theater"
        android:textSize="45dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="@dimen/cardview_default_elevation"
        android:gravity="center_horizontal" />
    <ImageView
        android:id="@+id/m1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:background="#00000000"
        android:src="@drawable/teat1" />
    <TextView
        android:id="@+id/list_e_taskdesc"
        android:layout_width="50mm"
        android:layout_centerInParent="true"
        android:layout_height="70mm"
        android:layout_weight="1"
        android:layout_gravity="fill_vertical"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"
        android:layout_marginTop="650dp"
        android:text="The Classical Theater 'Ioan Slavici' is a building erected between 1872-1874 in neoclassical style. The theater is in the immediate vicinity of the hotel, just a two-minute walk from the Continental Forum Arad.
The “Ioan Slavici” Classical Theater is the organizer of several festivals, such as: the International Classical Theater Festival, which brings to the audience the classic productions of the 21st century, and the International New Theater Festival, which aims to attract young audiences."
        tools:ignore="RtlCompat"
        android:textColor="@color/white"
        android:background="#A000">
    </TextView>
    <ImageView
        android:id="@+id/lo"
        android:layout_width="10mm"
        android:layout_height="7mm"
        android:background="#00000000"
        android:src="@drawable/lll"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-2.5mm"

        />
    <TextView
        android:id="@+id/loc"
        android:layout_width="300mm"
        android:layout_height="7mm"
        android:layout_gravity="fill_vertical"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"
        android:text="Location: Bulevardul Revolutiei , Nr.103, Arad"
        tools:ignore="RtlCompat"
        android:textColor="@color/white"
        android:background="#000000"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5mm">
    </TextView>
</RelativeLayout>
</ScrollView>